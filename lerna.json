{
  "packages": [
    "packages/*",
    "plugins/*",
    "examples/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": ["examples/*"]
    },
    "bootstrap": {
      "nohoist": "express"
    }
  },
  "changelog": {
    "repo": "yiiu/reslow",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    },
    "cacheDir": ".changelog"
  },
  "version": "independent"
}
